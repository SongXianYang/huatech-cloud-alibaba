<?xml version="1.0" encoding="utf-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.huatech.mapper.IUserMapper">

    <select id="selectUserIdAndUserName" resultType="com.huatech.entity.User">
        select * from shop_user
        <where>
            <if test="name != null">
                username =#{name}
            </if>
            <if test="id != null">
               and id=#{id}
            </if>
        </where>
    </select>
    <update id="updateUser" parameterType="com.huatech.entity.User">
        update shop_user
        <set>
            <if test="name != null and name !='' ">
                username=#{name}
            </if>
        </set>
        where id= #{id}
    </update>
    <select id="UserIds" resultType="com.huatech.entity.User">
        select * from shop_user where
        <if test="ids !=null">
            id in
            <foreach collection="ids" index="index" open = '(' separator = ',' close = ')' item="item">
                #{item}
            </foreach>
        </if>
    </select>


</mapper>
