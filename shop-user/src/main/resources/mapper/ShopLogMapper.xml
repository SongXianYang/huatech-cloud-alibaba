<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE  mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.huatech.mapper.ShopLogMapper">
    <resultMap id="BaseResultMap" type="com.huatech.entity.ShopLog">
        <result column="id" property="id"/>
        <result column="business_id" property="businessId"/>
        <result column="module_name" property="moduleName"/>
        <result column="description" property="description"/>
        <result column="created_time" property="createdTime"/>
    </resultMap>

    <!-- 表字段 -->
    <sql id="baseColumns">
         t.id
        , t.business_id
        , t.module_name
        , t.description
        , t.created_time
        </sql>

    <!-- 查询全部 -->
    <select id="listAll" resultMap="BaseResultMap">
        SELECT
        <include refid="baseColumns"/>
        FROM shop_log t
    </select>

    <!-- 根据主键获取单条记录 -->
    <select id="getById" resultMap="BaseResultMap" parameterType="Integer">
        SELECT
        <include refid="baseColumns"/>
        FROM shop_log t
        WHERE id = #{id}
    </select>

    <!-- 插入全部字段 -->
    <insert id="insert" parameterType="com.huatech.entity.ShopLog"
            keyProperty="id" keyColumn="id" useGeneratedKeys="true"
    >
        INSERT INTO shop_log
        <trim prefix="(" suffix=")" suffixOverrides=",">
            id,
            business_id,
            module_name,
            description,
            created_time,
        </trim>
        <trim prefix="VALUES (" suffix=")" suffixOverrides=",">
            #{id},
            #{businessId},
            #{moduleName},
            #{description},
            now(),
        </trim>
    </insert>

    <!-- 插入不为NULL的字段 -->
    <insert id="insertIgnoreNull" parameterType="com.huatech.entity.ShopLog"
            keyProperty="id" keyColumn="id" useGeneratedKeys="true"
    >
        INSERT INTO shop_log
        <trim prefix="(" suffix=")" suffixOverrides=",">

            <if test="id != null">
                id,
            </if>
            <if test="businessId != null">
                business_id,
            </if>
            <if test="moduleName != null">
                module_name,
            </if>
            <if test="description != null">
                description,
            </if>
                created_time,
        </trim>
        <trim prefix="VALUES (" suffix=")" suffixOverrides=",">
            <if test="id != null">
                #{id},
            </if>
            <if test="businessId != null">
                #{businessId},
            </if>
            <if test="moduleName != null">
                #{moduleName},
            </if>
            <if test="description != null">
                #{description},
            </if>
                now(),
        </trim>
    </insert>

    <!-- 更新,更新全部字段 -->
    <update id="update" parameterType="com.huatech.entity.ShopLog">
        UPDATE shop_log
        <set>
            business_id=#{businessId},
            module_name=#{moduleName},
            description=#{description},
            created_time=now(),
        </set>
        WHERE id = #{id}
    </update>


    <!-- 更新不为NULL的字段 -->
    <update id="updateIgnoreNull" parameterType="com.huatech.entity.ShopLog">
        UPDATE shop_log
        <set>
            <if test="businessId != null">
                business_id=#{businessId},
            </if>
            <if test="moduleName != null">
                module_name=#{moduleName},
            </if>
            <if test="description != null">
                description=#{description},
            </if>
                created_time=now(),

        </set>
        WHERE id = #{id}
    </update>


    <!-- 根据主键删除记录 -->
    <delete id="delete" parameterType="com.huatech.entity.ShopLog">
		UPDATE shop_log
		SET is_deleted=1
		WHERE id = #{id}
	</delete>


</mapper>